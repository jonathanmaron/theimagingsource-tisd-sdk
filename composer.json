{
    "name": "theimagingsource/tisd-sdk",
    "description": "PHP wrapper for The Imaging Source Download System Web API. Authored and supported by The Imaging Source Europe GmbH.",
    "license": "BSD-3-Clause",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Tisd\\Sdk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TisdTest\\Sdk\\": "test/"
        }
    },
    "require": {
        "php": "^7.4 || ^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/var-dumper": "^5.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "phpcs": "vendor/bin/phpcs src test --standard=phpcs.xml"
    }
}
